<h2>Recent Blog Posts</h2>
<% posts = @items.reject {|i| !(i[:kind] == 'blog-post') } %>
<% posts.reject! {|i| i[:tags].include?('link') } %>
<% posts.sort_by! {|i| i[:created_at] } %>
<% posts.reverse! %>

<% posts[0...4].each do |post| %>
  <p>
    <strong>
      <a href="<%= post.path %>"><%= post[:title] %></a>
    </strong><br/>
    <small><em>Created <%= post[:created_at] %> by <%= post[:author] || "Gabe Koss" %></em></small><br/>
    <%= post[:summary] %></a>
  </p>
<% end %>
